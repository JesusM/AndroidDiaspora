<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:background="@color/white">
	<LinearLayout android:layout_width="wrap_content"
		android:id="@+id/LayoutPhotoProfile" android:layout_alignParentLeft="true"
		android:layout_height="fill_parent" android:layout_marginTop="15px">
		<ImageView android:layout_width="45px"
			android:layout_alignParentLeft="true" android:layout_marginLeft="10px"
			android:id="@+id/PhotoProfile" android:gravity="center"
			android:layout_marginBottom="15px" android:layout_height="45px"
			android:src="@drawable/list_white"></ImageView>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent" android:layout_marginRight="4dip"
		android:layout_marginLeft="7px" android:orientation="vertical"
		android:layout_toRightOf="@id/LayoutPhotoProfile"
		android:layout_alignTop="@id/LayoutPhotoProfile"
		android:layout_height="fill_parent">
		<TextView android:layout_width="fill_parent" android:id="@+id/NameProfile"
			android:layout_height="wrap_content" android:textStyle="bold"
			android:textColor="@color/black" android:gravity="left" android:text="Jesus"></TextView>
		<ImageView android:layout_width="fill_parent" android:id="@+id/UploadPhoto"
			android:gravity="left" android:adjustViewBounds="true" android:background="@color/black"
			android:layout_height="wrap_content"></ImageView>
		<TextView android:layout_width="fill_parent" android:id="@+id/comentario"
			android:layout_height="wrap_content" android:textColor="@color/black"
			android:gravity="left" android:text="Jesus"></TextView>
		<LinearLayout android:layout_width="fill_parent" android:layout_marginTop="7dip"
			android:orientation="horizontal" android:layout_height="fill_parent">
			<TextView android:layout_width="fill_parent" android:id="@+id/comentarioSince"
				android:layout_weight="1.0" android:layout_height="wrap_content"
				android:textColor="@color/dkgray" android:gravity="left"
				android:text="Jesus"></TextView>
			<TextView android:layout_width="fill_parent" android:id="@+id/comentarioResponses"
				android:layout_marginRight="3px" android:layout_weight="1.0"
				android:layout_height="wrap_content" android:textColor="#0174DF"
				android:gravity="right" android:text="Jesus"></TextView>
		</LinearLayout>

	</LinearLayout>

</RelativeLayout>
