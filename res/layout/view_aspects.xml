<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@color/lightgray">
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:background="@color/black">
			<RelativeLayout android:orientation="horizontal"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_marginBottom="10px">

				<ImageView android:layout_width="35px" android:id="@+id/iconobusqueda"
					android:layout_marginRight="15px" android:layout_marginBottom="15px"
					android:layout_alignParentRight="true" android:layout_marginTop="15px"
					android:layout_gravity="center" android:layout_height="35px"
					android:src="@drawable/search_white"></ImageView>
				<LinearLayout android:layout_width="fill_parent"
					android:layout_alignTop="@id/iconobusqueda" android:layout_height="wrap_content"
					 android:layout_toLeftOf="@id/iconobusqueda">
					<ImageView android:layout_width="fill_parent" android:id="@+id/letrero"
						android:layout_gravity="center_horizontal" android:layout_height="wrap_content"
						android:src="@drawable/white_2x" />
				</LinearLayout>


			</RelativeLayout>
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:id="@+id/a" android:layout_marginLeft="15px"
			android:layout_marginTop="15px" android:layout_marginRight="15px"
			android:layout_height="wrap_content" android:orientation="vertical">
			<TextView android:layout_width="fill_parent" android:id="@+id/NombreProfile"
				android:layout_height="wrap_content" android:textStyle="bold"
				android:textColor="@color/black" android:gravity="left" android:textSize="24dip"
				android:text="Jesus" android:layout_marginBottom="20px"></TextView>
			<RelativeLayout android:layout_width="fill_parent" android:id="@+id/notify"
				android:padding="7dip" android:gravity="center" android:paddingTop="2dip"
				android:layout_height="wrap_content" android:background="@drawable/my_border_edittext_open_bottom"
				>
				<ImageView android:layout_width="wrap_content" android:id="@+id/b"
					android:textColor="@color/black" android:src="@drawable/arrow_right" android:paddingTop="8px" android:paddingBottom="8px"
					android:layout_centerInParent="true" android:layout_marginRight="7px"
					android:layout_marginLeft="7px" android:layout_alignParentRight="true"
					android:gravity="left" android:layout_height="wrap_content" />

				<TextView android:layout_width="wrap_content" android:text="10" android:textStyle="bold"  android:id="@+id/number_of_notifications" 
					android:background="@drawable/circle_shape" android:gravity="right|center_vertical"  android:layout_centerVertical="true"
					android:textColor="@color/black" android:layout_marginLeft="7px"
					android:layout_marginRight="7px" android:layout_toLeftOf="@id/b"
					android:layout_height="wrap_content"></TextView>
					
				<TextView android:layout_width="wrap_content"
					android:layout_alignParentLeft="true" android:id="@+id/a2"
					android:textStyle="bold" android:layout_centerInParent="true"
					android:layout_marginLeft="7px" android:textColor="@color/black"
					android:text="Notifications" android:layout_height="fill_parent"></TextView>



			</RelativeLayout>
			<RelativeLayout android:layout_width="fill_parent" android:id="@+id/inbox"
				android:padding="7dip" android:gravity="center"
				android:layout_height="wrap_content" android:background="@drawable/my_border_edittext_open_top"
				android:layout_marginBottom="10dip">
				<ImageView android:layout_width="wrap_content" android:id="@+id/b"
					android:textColor="@color/black" android:src="@drawable/arrow_right" android:paddingTop="8px" android:paddingBottom="8px"
					android:layout_centerInParent="true" android:layout_marginRight="7px"
					android:layout_marginLeft="7px" android:layout_alignParentRight="true"
					android:gravity="left" android:layout_height="wrap_content" />

				<TextView android:layout_width="wrap_content" android:text="5" android:textStyle="bold" 
					android:background="@drawable/circle_shape" android:gravity="right" android:layout_centerInParent="true"
					android:textColor="@color/black" android:layout_marginLeft="7px"
					android:layout_marginRight="7px" android:layout_toLeftOf="@id/b"
					android:layout_height="wrap_content"></TextView>
					
				<TextView android:layout_width="wrap_content"
					android:layout_alignParentLeft="true" android:id="@+id/a2"
					android:textStyle="bold" android:layout_centerInParent="true"
					android:layout_marginLeft="7px" android:textColor="@color/black"
					android:text="Message Inbox" android:layout_height="fill_parent"></TextView>



			</RelativeLayout>
			<TextView android:layout_width="fill_parent" android:id="@+id/NombreProfile"
				android:layout_height="wrap_content" android:textStyle="bold"
				android:textColor="@color/black" android:gravity="left"
				android:text="Your aspects" android:layout_marginBottom="20px"></TextView>
		</LinearLayout>




	</LinearLayout>

</ScrollView>