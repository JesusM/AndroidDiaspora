<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@color/lightgray">
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:background="@color/black">
			<RelativeLayout android:orientation="horizontal"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_marginBottom="10px">

				<ImageView android:layout_width="35px" android:id="@+id/iconobusqueda"
					android:layout_marginRight="15px" android:layout_marginBottom="15px"
					android:layout_alignParentRight="true" android:layout_marginTop="15px"
					android:layout_gravity="center" android:layout_height="35px"
					android:src="@drawable/search_white"></ImageView>
				<LinearLayout android:layout_width="fill_parent"
					android:layout_alignTop="@id/iconobusqueda" android:layout_height="wrap_content"
					 android:layout_toLeftOf="@id/iconobusqueda">
					<ImageView android:layout_width="fill_parent" android:id="@+id/letrero"
						android:layout_gravity="center_horizontal" android:layout_height="wrap_content"
						android:src="@drawable/white_2x" />
				</LinearLayout>


			</RelativeLayout>
		</LinearLayout>
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_marginLeft="5dip" android:layout_marginTop="14dip"
			android:layout_marginRight="5dip" android:layout_height="wrap_content"
			android:orientation="horizontal">
			<TextView android:layout_width="wrap_content"
				android:layout_centerInParent="true" android:paddingLeft="10dip"
				android:paddingRight="10dip" android:layout_alignParentLeft="true"
				android:id="@+id/number_of_notifications" android:background="@drawable/square_notification"
				android:layout_height="wrap_content" android:textSize="25dip"
				android:textColor="@color/dkgray" android:text="0"></TextView>
			<TextView android:layout_width="fill_parent"
				android:layout_centerInParent="true" android:layout_toRightOf="@id/number_of_notifications"
				android:gravity="left" android:layout_marginLeft="7dip"
				android:layout_height="wrap_content" android:textStyle="bold"
				android:textSize="20dip" android:textColor="@color/black"
				android:text="Notifications"></TextView>
			<Button android:layout_width="wrap_content" android:id="@+id/Mark_as_read"
				android:layout_alignParentRight="true"
				android:layout_centerInParent="true" android:layout_height="wrap_content"
				android:text="Mark all as read" android:paddingLeft="3dip"
				android:paddingTop="5dip" android:paddingRight="3dip"
				android:paddingBottom="5dip" android:textColor="@color/black"
				android:textStyle="bold" android:background="@drawable/my_border_not_open"></Button>
		</RelativeLayout>
		<LinearLayout android:orientation="vertical"			
			android:layout_marginTop="14dip" 
			android:layout_width="fill_parent" android:layout_height="1dip" android:background="@color/gray"></LinearLayout>
		<LinearLayout android:orientation="vertical"
			android:id="@+id/layout_notif_a_rellenar"
			android:layout_marginTop="14dip" 
			android:layout_width="fill_parent" android:layout_height="wrap_content"></LinearLayout>
	</LinearLayout>
</ScrollView>
